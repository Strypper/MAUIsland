<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MAUIsland.RegisterFormContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="root">
    <VerticalStackLayout Spacing="5">
        <Label Text="Phone number" />
        <Entry
            Keyboard="Telephone"
            MinimumWidthRequest="300"
            Placeholder="Input your phone number"
            Text="{x:Binding PhoneNumber,
                             Mode=TwoWay}" />
        <Label Text="Email" />
        <Entry Keyboard="Email" MinimumWidthRequest="300" />
        <Label Text="Password" />
        <Entry
            IsPassword="True"
            MinimumWidthRequest="300"
            Text="{x:Binding Password}" />
        <Label Text="Confirm password" />
        <Entry IsPassword="True" MinimumWidthRequest="300" />
        <Label Text="First name" />
        <Entry x:Name="FirstNameEntry" />
        <Label Text="Last name" />
        <Entry x:Name="LastNameEntry" />
        <HorizontalStackLayout>
            <Button Command="{x:Binding LoginCommand}" Text="Sign in" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
