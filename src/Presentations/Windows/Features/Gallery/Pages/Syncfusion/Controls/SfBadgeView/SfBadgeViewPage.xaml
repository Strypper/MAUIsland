    </core:BasePage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <Label Text="{x:Binding ControlInformation.ControlDetail}" />
            </Border>

            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="10">
                    <CollectionView
                        Header="{x:StaticResource PropertiesListHeader}"
                        ItemsSource="{x:StaticResource PropertiesItemsSource}"
                        Style="{x:StaticResource PropertiesListStyle}" />
                </VerticalStackLayout>
            </Border>
            <Label
                FontAttributes="Bold"
                FontSize="Title"
                Text="Getting Started" />
            <!--  Adding a content  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Adding a content" />
                    <Label Text="An Image, button, or label or any view can be added to the Badge View using the Content property." />
                    <badge:SfBadgeView HorizontalOptions="Center" VerticalOptions="Center">
                        <badge:SfBadgeView.Content>
                            <Button
                                HeightRequest="60"
                                Text="Primary"
                                WidthRequest="120" />
                        </badge:SfBadgeView.Content>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding AddingAContentXamlCode}" CodeType="Xaml" />
                    <Label Text="The following screenshot illustrates the result of the above code." />
                    <badge:SfBadgeView
                        BadgeText="20"
                        HeightRequest="85"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="150">
                        <badge:SfBadgeView.Content>
                            <Button
                                HeightRequest="60"
                                Text="Primary"
                                WidthRequest="120" />
                        </badge:SfBadgeView.Content>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding AddingAContentSecondXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <Label
                FontAttributes="Bold"
                FontSize="Title"
                Text="Badge Customization" />
            <!--  Font customization  -->

            <!--  Error: BREAK!!!  -->

            <!--  Stroke customization  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Stroke customization" />
                    <Label Text="The stroke and stroke thickness of the badge view can be customized using the Stroke and StrokeThickness properties, respectively." />
                    <badge:SfBadgeView
                        BadgeText="30"
                        HeightRequest="85"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="150">
                        <badge:SfBadgeView.Content>
                            <Button
                                BackgroundColor="#d6d8d7"
                                HeightRequest="60"
                                Text="Primary"
                                TextColor="Black"
                                WidthRequest="120" />
                        </badge:SfBadgeView.Content>
                        <badge:SfBadgeView.BadgeSettings>
                            <badge:BadgeSettings Stroke="Orange" StrokeThickness="2" />
                        </badge:SfBadgeView.BadgeSettings>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding StrokeCustomizationXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Text customization  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Text customization" />
                    <Label Text="The text color and margin of badge view can be changed using the TextColor and TextPadding properties, respectively." />
                    <badge:SfBadgeView
                        BadgeText="45"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="170">
                        <badge:SfBadgeView.Content>
                            <Button
                                BackgroundColor="#d6d8d7"
                                HeightRequest="60"
                                Text="Primary"
                                TextColor="Black"
                                WidthRequest="120" />
                        </badge:SfBadgeView.Content>
                        <badge:SfBadgeView.BadgeSettings>
                            <badge:BadgeSettings TextColor="LightYellow" TextPadding="10" />
                        </badge:SfBadgeView.BadgeSettings>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding TextCustomizationXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Predefined styles  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Predefined styles" />
                    <CollectionView
                        Header="{x:StaticResource PropertiesListHeader1}"
                        ItemsSource="{x:StaticResource PropertiesItemsSource1}"
                        Style="{x:StaticResource PropertiesListStyle}" />
                    <badge:SfBadgeView
                        BadgeText="8"
                        HeightRequest="65"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="75">
                        <badge:SfBadgeView.Content>
                            <Image
                                HeightRequest="70"
                                Source="https://i.imgur.com/mdBNR5T.png"
                                WidthRequest="60" />
                        </badge:SfBadgeView.Content>
                        <badge:SfBadgeView.BadgeSettings>
                            <badge:BadgeSettings Type="Error" />
                        </badge:SfBadgeView.BadgeSettings>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding PredefindedSymbolsXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Badge background customization  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Badge background customization" />
                    <Label Text="Other than the predefined styles, the color of the badge can be customized using the BadgeType property which has to be set as None. Then the color of the badge view can be set using the Background property." />
                    <badge:SfBadgeView
                        BadgeText="48"
                        HeightRequest="85"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="150">
                        <badge:SfBadgeView.Content>
                            <Button
                                BackgroundColor="#d6d8d7"
                                HeightRequest="60"
                                Text="Primary"
                                TextColor="Black"
                                WidthRequest="120" />
                        </badge:SfBadgeView.Content>
                        <badge:SfBadgeView.BadgeSettings>
                            <badge:BadgeSettings Background="Green" Type="None" />
                        </badge:SfBadgeView.BadgeSettings>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding BadgeBackgroundCustomizationXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Setting corner radius of the badge  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Setting corner radius of the badge" />
                    <Label Text="The CornerRadius property is used to reduce the radius of the corners." />
                    <badge:SfBadgeView
                        BadgeText="100"
                        HeightRequest="85"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="160">
                        <badge:SfBadgeView.Content>
                            <Button
                                BackgroundColor="#d6d8d7"
                                HeightRequest="60"
                                Text="Primary"
                                TextColor="Black"
                                WidthRequest="120" />
                        </badge:SfBadgeView.Content>
                        <badge:SfBadgeView.BadgeSettings>
                            <badge:BadgeSettings CornerRadius="5,5,5,5" />
                        </badge:SfBadgeView.BadgeSettings>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding CornerRadiusOfTheBadgeXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Alignment of badge  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Alignment of badge" />
                    <Label Text="Align the badge view using the Center, Start, and End properties of BadgeAlignment property." />
                    <!--  START  -->
                    <Grid
                        ColumnDefinitions="*,*,*"
                        ColumnSpacing="5"
                        RowDefinitions="*"
                        RowSpacing="5">
                        <badge:SfBadgeView
                            Grid.Row="0"
                            Grid.Column="0"
                            BadgeText="20"
                            HeightRequest="113"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="176">
                            <badge:SfBadgeView.Content>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    BackgroundColor="LightGray"
                                    HeightRequest="70"
                                    HorizontalTextAlignment="Center"
                                    Text="START"
                                    TextColor="Black"
                                    VerticalTextAlignment="Center"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings BadgeAlignment="Center" CornerRadius="0" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  CENTER  -->
                        <badge:SfBadgeView
                            Grid.Row="0"
                            Grid.Column="1"
                            BadgeText="20"
                            HeightRequest="80"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="130">
                            <badge:SfBadgeView.Content>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    BackgroundColor="LightGray"
                                    HeightRequest="60"
                                    HorizontalTextAlignment="Center"
                                    Text="CENTER"
                                    TextColor="Black"
                                    VerticalTextAlignment="Center"
                                    WidthRequest="100" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings BadgeAlignment="Center" CornerRadius="0" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  END  -->
                        <badge:SfBadgeView
                            Grid.Row="0"
                            Grid.Column="2"
                            BadgeText="20"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="100">
                            <badge:SfBadgeView.Content>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    BackgroundColor="LightGray"
                                    HeightRequest="60"
                                    HorizontalTextAlignment="Center"
                                    Text="END"
                                    TextColor="Black"
                                    VerticalTextAlignment="Center"
                                    WidthRequest="100" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings BadgeAlignment="Center" CornerRadius="0" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                    </Grid>
                    <core:SourceCodeExpander Code="{x:Binding AlignmentOfBadgeXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Position customization  -->
            <Label
                FontAttributes="Bold"
                FontSize="Title"
                Text="Badge Customization" />
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Text="The default position of notification is TopRight. The position can be customized as TopLeft, BottomLeft, BottomRight, Left,Top, Right, and Bottom using the Position property." />
                    <HorizontalStackLayout Spacing="50">
                        <!--  Left  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Left"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="Left" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Top  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HeightRequest="75"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Top"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="Top" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Right  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Right"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="Right" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Bottom  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HeightRequest="80"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Bottom"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="Bottom" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Top right  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HeightRequest="75"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Top right"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="TopRight" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Bottom left  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HeightRequest="75"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Bottom left"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="BottomLeft" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Bottom right  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HeightRequest="75"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Bottom right"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="BottomRight" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Top left  -->
                        <badge:SfBadgeView
                            BadgeText="5"
                            HeightRequest="75"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="140">
                            <badge:SfBadgeView.Content>
                                <Button
                                    BackgroundColor="#d6d8d7"
                                    HeightRequest="60"
                                    Text="Top left"
                                    TextColor="Black"
                                    WidthRequest="120" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings Position="TopLeft" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                    </HorizontalStackLayout>
                    <core:SourceCodeExpander Code="{x:Binding PositionCustomizationXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Setting a badge offset  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <Label Style="{x:StaticResource DocumentSectionTitleStyle}" Text="Setting a badge offset" />
                    <Label Text="The badge view x,y position can be adjusted using the Offset property." />
                    <!--  Origin  -->
                    <badge:SfBadgeView
                        BadgeText="8"
                        HeightRequest="70"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60">
                        <badge:SfBadgeView.Content>
                            <Image
                                HeightRequest="70"
                                Source="https://i.imgur.com/mdBNR5T.png"
                                WidthRequest="60" />
                        </badge:SfBadgeView.Content>
                        <badge:SfBadgeView.BadgeSettings>
                            <badge:BadgeSettings
                                Position="BottomRight"
                                Type="Success"
                                Offset="0,-1" />
                        </badge:SfBadgeView.BadgeSettings>
                    </badge:SfBadgeView>
                    <core:SourceCodeExpander Code="{x:Binding SettingAbadgeOffsetXamlCode}" CodeType="Xaml" />
                </VerticalStackLayout>
            </Border>
            <!--  Change your avatarview  -->
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="10">
                    <badge:SfBadgeView
                        BadgeText="8"
                        HeightRequest="112"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="65">
                        <VerticalStackLayout Spacing="10">
                            <inputs:SfComboBox
                                x:Name="comboBox"
                                DisplayMemberPath="Name"
                                ItemsSource="{x:Binding TotechsMembers}"
                                SelectedItem="{x:Binding SelectedTotechsMember,
                                                         Mode=TwoWay}" />
                            <sfavatar:SfAvatarView
                                ContentType="Default"
                                HeightRequest="60"
                                ImageSource="{x:Binding SelectedTotechsMember.AvatarUrl,
                                                        Mode=OneWay}"
                                WidthRequest="60" />
                            <Label HorizontalOptions="Center" Text="{x:Binding SelectedTotechsMember.Name}" />
                        </VerticalStackLayout>
                        <badge:SfBadgeView.BadgeSettings>
                            <badge:BadgeSettings
                                Position="BottomRight"
                                Type="Success"
                                Offset="0,-1" />
                        </badge:SfBadgeView.BadgeSettings>
                    </badge:SfBadgeView>
                </VerticalStackLayout>
            </Border>
            <!--  Predefined symbols  -->
            <Label
                FontAttributes="Bold"
                FontSize="Title"
                Text="Predefined symbols" />
            <Border Padding="20" StrokeShape="RoundRectangle 4">
                <VerticalStackLayout Spacing="20">
                    <CollectionView
                        Header="{x:StaticResource PropertiesListHeader2}"
                        ItemsSource="{x:StaticResource PropertiesItemsSource2}"
                        Style="{x:StaticResource PropertiesListStyle}" />
                    <HorizontalStackLayout Spacing="140">
                        <!--  Away  -->
                        <badge:SfBadgeView HorizontalOptions="Center" VerticalOptions="Center">
                            <badge:SfBadgeView.Content>
                                <Image
                                    HeightRequest="70"
                                    Source="https://i.imgur.com/mdBNR5T.png"
                                    WidthRequest="60" />
                            </badge:SfBadgeView.Content>
                            <badge:SfBadgeView.BadgeSettings>
                                <badge:BadgeSettings
                                    Icon="Away"
                                    Position="BottomRight"
                                    Type="Warning"
                                    Offset="-2, -2" />
                            </badge:SfBadgeView.BadgeSettings>
                        </badge:SfBadgeView>
                        <!--  Available  -->
                        <badge:SfBadgeView HorizontalOptions="Center" VerticalOptions="Center">
                            <badge:SfBadgeView.Content>
