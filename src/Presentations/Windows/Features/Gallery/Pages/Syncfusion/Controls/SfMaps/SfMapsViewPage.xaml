            <Label
                FontAttributes="Bold"
                FontSize="Title"
                Text="This sample showcases the world map with different time zones using markers." />
            <!--  Marker Layer  -->
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    FontSize="Subtitle"
                    HorizontalOptions="Center"
                    Text="World Clock" />
                <maps:SfMaps Grid.Row="1">
                    <maps:SfMaps.Layer>
                        <maps:MapShapeLayer
                            x:Name="markerLayer"
                            MarkerTemplate="{StaticResource markerTemplate}"
                            Markers="{Binding Markers}"
                            ShapeFill="#dadadb"
                            ShapeHoverFill="Transparent"
                            ShapeHoverStroke="Transparent"
                            ShapeHoverStrokeThickness="0"
                            ShapeStrokeThickness="0" />
                    </maps:SfMaps.Layer>
                </maps:SfMaps>
            </Grid>
            <core:SourceCodeExpander Code="{x:Binding MarkerLayerSource}" CodeType="Xaml" />
        </VerticalStackLayout>
    </ScrollView>
</core:BasePage>