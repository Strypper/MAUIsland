<?xml version="1.0" encoding="utf-8" ?>
<app:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:MAUIsland"
             
             x:Class="MAUIsland.GalleryPage"
             x:DataType="app:GalleryPageViewModel"
             Title="GalleryPage">
    <Grid>
        <Label Text=".NET Multi-platform App UI"
               FontSize="Title"
               FontAttributes="Bold"
               TextColor="{x:StaticResource Primary}"/>

        <VerticalStackLayout VerticalOptions="Center"
                             HorizontalOptions="Center">
            <Frame HasShadow="True">
                <ImageButton Source="dotnet_bot.png"
                             WidthRequest="200"
                             HeightRequest="200"
                             Command="{x:Binding NavigateToMauiControlCommand}"/>
            </Frame>
            <Label Text="NATIVE CONTROL"
                   FontSize="Caption"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
    </Grid>
</app:BasePage>