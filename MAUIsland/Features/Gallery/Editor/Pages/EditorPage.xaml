<?xml version="1.0" encoding="utf-8" ?>
<app:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:MAUIsland"
             
             x:Class="MAUIsland.EditorPage"
             x:DataType="app:EditorPageViewModel"
             Title="Editor"
              Padding="10">
    <VerticalStackLayout>
        <Label Text="You can use a Editor"/>
        <Label Text="Simple editor"
               FontSize="Subtitle"
               FontAttributes="Bold"/>
        <Frame HasShadow="True">
            <VerticalStackLayout>
                <Editor HeightRequest="500"/>
                <Label Text="Show code"/>
            </VerticalStackLayout>
        </Frame>
        
    </VerticalStackLayout>
</app:BasePage>