<?xml version="1.0" encoding="utf-8" ?>
<app:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:MAUIsland"
             
             x:Class="MAUIsland.EditorPage"
             x:DataType="app:EditorPageViewModel"
             Title="Editor"
              Padding="10">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="You can use a Editor"/>
            <Label Text="Simple editor"
               FontSize="Subtitle"
               FontAttributes="Bold"/>
            <Frame HasShadow="True">
                <VerticalStackLayout>
                    <Editor/>
                    <Label Text="Show code"/>
                </VerticalStackLayout>
            </Frame>
            <Label Text="Customizing RcikEditBox's CommandBarFlyout - Adding 'Share' "
        FontSize="Subtitle"
               FontAttributes="Bold"/>
            <Frame HasShadow="True">
                <VerticalStackLayout>
                    <Editor BackgroundColor="Aqua"
                            HeightRequest="200"/>
                    <Label Text="Show code"/>

                </VerticalStackLayout>
            </Frame>
            <Label Text="A custom editor with RichEditBox."
                   FontSize="Subtitle"
                   FontAttributes="Bold"/>
            
            
        </VerticalStackLayout>
    </ScrollView>

</app:BasePage>