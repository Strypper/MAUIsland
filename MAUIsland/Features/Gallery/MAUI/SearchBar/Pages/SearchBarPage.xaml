<?xml version="1.0" encoding="utf-8" ?>
<app:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:app="clr-namespace:MAUIsland"
             
              x:Class="MAUIsland.SearchBarPage"
              x:DataType="app:SearchBarPageViewModel"
              
              Title="Search Bar">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Search Bar Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ScrollView>
            <VerticalStackLayout>
                <Label
            Text="The .NET Multi-platform App UI (.NET MAUI) SearchBar is a user input control used to initiating a search. The SearchBar control supports placeholder text, query input, search execution, and cancellation. The following iOS screenshot shows a SearchBar query with results displayed in a ListView:"
            
            VerticalTextAlignment="Start"/>

            </VerticalStackLayout>
        </ScrollView>
        <SearchBar Placeholder="Search items..."
                   PlaceholderColor="Silver"/>
    </VerticalStackLayout>
</app:BasePage>