<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIsland.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:MAUIsland"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate app:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Button"
        ContentTemplate="{DataTemplate app:ButtonPage}"
        Route="buttonPage" />

    <ShellContent
        Title="Editor"
        ContentTemplate="{DataTemplate app:EditorPage}"
        Route="editorPage" />

    <ShellContent
        Title="MenuBar"
        ContentTemplate="{DataTemplate app:MenuBarPage}"
        Route="menuBarPage" />

    <ShellContent
        Title="Activity Indicator"
        ContentTemplate="{DataTemplate app:ActivityIndicatorPage}"
        Route="activityIndicatorPage" />
</Shell>
